<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

 <androidx.cardview.widget.CardView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:backgroundTint="@color/lalab_orange"
     app:cardCornerRadius="30dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginTop="10dp"
      android:layout_marginRight="30dp"
      app:srcCompat="@drawable/baseline_close_24" />

  <TextView
      android:id="@+id/text_dialog_1"
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:layout_marginBottom="200dp"
      android:gravity="center"
      android:text="Congratulations!"
      android:textColor="@color/black" />

  <ImageView
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_gravity="center"
      android:src="@drawable/kamatis" />

  <TextView
      android:id="@+id/text_dialog_2"
      android:layout_width="296dp"
      android:layout_height="match_parent"
      android:layout_marginTop="150dp"
      android:gravity="center"
      android:text="Please set a time"
      android:textColor="@color/black" />

  <TextView
      android:id="@+id/text_dialog_3"
      android:layout_width="296dp"
      android:layout_height="match_parent"
      android:layout_marginTop="200dp"
      android:gravity="center"
      android:text="before starting the timer."
      android:textColor="@color/black" />
 </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>