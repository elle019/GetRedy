<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_bg"
    tools:context=".MainActivity">

 <me.tankery.lib.circularseekbar.CircularSeekBar
     android:id="@+id/slider_circle"
     android:layout_width="240dp"
     android:layout_height="240dp"
     android:layout_centerInParent="true"
     app:cs_circle_color="@color/snufkin_green"
     app:cs_circle_fill="@color/lalab_orange"
     app:cs_circle_progress_color="@color/mint_green"
     app:cs_circle_stroke_width="12dp"
     app:cs_circle_style="round"
     app:cs_circle_x_radius="0dp"
     app:cs_circle_y_radius="0dp"
     app:cs_disable_pointer="false"
     app:cs_disable_progress_glow="true"
     app:cs_hide_progress_when_empty="true"
     app:cs_lock_enabled="true"
     app:cs_maintain_equal_circle="true"
     app:cs_max="60"
     app:cs_move_outside_circle="true"
     app:cs_negative_enabled="false"
     app:cs_pointer_alpha_ontouch="5"
     app:cs_pointer_angle="0"
     app:cs_pointer_color="@color/mint_green"
     app:cs_pointer_stroke_width="35dp"
     app:cs_progress="0"
     app:cs_use_custom_radii="false" />

 <TextView
     android:id="@+id/time_preset"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@id/slider_circle"
     android:layout_marginBottom="30dp"
     android:layout_centerInParent="true"
     android:text="@string/defaultTimerValue"
     android:textColor="@color/white"
     android:textSize="40dp" />

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/redy_button"
     android:layout_width="211dp"
     android:layout_height="57dp"
     android:layout_alignParentStart="true"
     android:layout_alignParentEnd="true"
     android:layout_alignParentBottom="true"
     android:layout_marginStart="100dp"
     android:layout_marginEnd="100dp"
     android:layout_marginBottom="144dp"
     android:background="@drawable/custom_button_signing"
     android:backgroundTint="@color/tomato_red"
     android:padding="10dp"
     android:text="@string/startTimerButtonLabel"
     android:textColor="@color/white"
     android:textSize="17dp"
     android:onClick="timer_starts"/>

 <ImageView
     android:id="@+id/kamatis"
     android:layout_width="185dp"
     android:layout_height="185dp"
     android:layout_centerInParent="true"
     android:layout_marginEnd="113dp" />


</RelativeLayout>